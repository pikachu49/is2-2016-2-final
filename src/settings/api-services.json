{
    "registerPerson": {
        "path": "/register",
        "method": "POST",
        "schema": { "required": [] }
    },

    "createSession": {
        "path": "/session",
        "method": "POST",
        "schema": { "required": [] }
    },

    "deleteSession": {
        "path": "/session/:sessionId",
        "method": "DELETE"
    },

    "registerUser": {
        "path": "/users",
        "method": "POST",
        "schema": { "required": [] }
    },

    "registerProvider": {
        "path": "/providers",
        "method": "POST",
        "schema": { "required": ["name"] }
    },

    "registerProviderProduct": {
        "path": "/providers/:providerId/products",
        "method": "POST",
        "schema": { "required": [] }
    },

    "registerProductLot": {
        "path": "/products/:productId/lots",
        "method": "POST",
        "schema": { "required": ["code"] }
    },

    "getProviders": {
        "path": "/providers",
        "method": "GET"
    },

    "getProvider": {
        "path": "/providers/:providerId",
        "method": "GET"
    },

    "getProviderProducts": {
        "path": "/providers/:providerId/products",
        "method": "GET"
    },

    "getProduct": {
        "path": "/products/:productId",
        "method": "GET"
    },

    "getProductLots": {
        "path": "/products/:productId/lots",
        "method": "GET"
    },

    "getLot": {
        "path": "/lots/:lotId",
        "method": "GET"
    }
}